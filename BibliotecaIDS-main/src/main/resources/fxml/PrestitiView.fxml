<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="it.unisa.biblioteca.controller.PrestitiController"
            prefHeight="700.0" prefWidth="1100.0">
    
    <!-- HEADER -->
    <top>
        <VBox style="-fx-background-color: #e74c3c;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="ðŸ“– Gestione Prestiti" textFill="white">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.65">
            
            <!-- LEFT - Tabella prestiti -->
            <VBox spacing="10">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Elenco Prestiti">
                        <font>
                            <Font name="System Bold" size="16"/>
                        </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS"/>
                    <RadioButton text="Tutti" selected="true" onAction="#handleFiltraTutti">
                        <toggleGroup>
                            <ToggleGroup fx:id="filtroGroup"/>
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton text="Solo Attivi" toggleGroup="$filtroGroup" onAction="#handleFiltraAttivi"/>
                    <RadioButton text="In Ritardo" toggleGroup="$filtroGroup" onAction="#handleFiltraRitardo"/>
                </HBox>
                
                <!-- Tabella -->
                <TableView fx:id="tblPrestiti" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colLibro" text="Libro" prefWidth="220"/>
                        <TableColumn fx:id="colUtente" text="Utente" prefWidth="180"/>
                        <TableColumn text="Matricola" prefWidth="100">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="matricolaUtente"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="ISBN" prefWidth="120">
                            <cellValueFactory>
                                <javafx.scene.control.cell.PropertyValueFactory property="isbnLibro"/>
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="colDataRestituzione" text="Data Restituzione" prefWidth="120"/>
                    </columns>
                </TableView>
                
                <!-- Bottoni azioni -->
                <HBox spacing="10">
                    <Button text="âœ… Registra Restituzione" fx:id="btnRestituzione" onAction="#handleRestituzione" 
                            style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="lblPrestitiCount" text="Prestiti: 0" style="-fx-font-weight: bold;"/>
                </HBox>
            </VBox>
            
            <!-- RIGHT - Form nuovo prestito -->
            <VBox spacing="15" style="-fx-background-color: #ecf0f1;">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                
                <Label text="ðŸ“ Nuovo Prestito">
                    <font>
                        <Font name="System Bold" size="16"/>
                    </font>
                </Label>
                
                <Separator/>
                
                <!-- Selezione Libro -->
                <Label text="Seleziona Libro:"/>
                <ComboBox fx:id="cmbLibri" promptText="Scegli un libro..." maxWidth="Infinity"/>
                <Label fx:id="lblCopieDisponibili" text="Copie disponibili: -" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
                
                <!-- Selezione Utente -->
                <Label text="Seleziona Utente:"/>
                <ComboBox fx:id="cmbUtenti" promptText="Scegli un utente..." maxWidth="Infinity"/>
                <Label fx:id="lblPrestitiUtente" text="Prestiti attivi utente: -" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
                
                <!-- Durata prestito -->
                <Label text="Durata Prestito (giorni):"/>
                <!-- Durata prestito -->
                <Label text="Durata Prestito (giorni):"/>
                <TextField fx:id="txtDurataPrestito" promptText="Es. 14" text="14"/>
                <Label text="(Inserisci il numero di giorni)" style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
                
                <!-- Info prestito -->
                <VBox spacing="5" style="-fx-background-color: #d5dbdb; -fx-padding: 10; -fx-background-radius: 5;">
                    <Label text="â„¹ï¸ Informazioni Prestito" style="-fx-font-weight: bold;"/>
                    <Label fx:id="lblDataPrestito" text="Data prestito: -"/>
                    <Label fx:id="lblDataScadenza" text="Data scadenza: -"/>
                </VBox>
                
                <Region VBox.vgrow="ALWAYS"/>
                
                <!-- Bottoni -->
                <Button text="ðŸ“– Registra Prestito" onAction="#handleNuovoPrestito" 
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 12 20;"
                        maxWidth="Infinity"/>
                
                <Button text="ðŸ”„ Pulisci" onAction="#handlePulisci" 
                        style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20;"
                        maxWidth="Infinity"/>
            </VBox>
            
        </SplitPane>
    </center>
    
    <!-- FOOTER -->
    <bottom>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Label fx:id="lblStatus" text="Pronto" textFill="white"/>
        </HBox>
    </bottom>
    
</BorderPane>
